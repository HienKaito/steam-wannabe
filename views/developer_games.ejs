<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Games</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <style>
        /* General Page Styling */
        body {
            background-color: #1b2838;
            color: white;
        }

        /* Header Styling */
        header {
            background: #1b2838;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #444;
        }

        header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: bold;
        }

        .wallet-info {
            color: #ccc;
            font-size: 16px;
        }

        /* Table Styling */
        table {
            background: #2a3f54;
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background: #1b2838;
            color: white;
        }

        td {
            color: white; /* Set table font color to white */
            background: #2a3f54;
        }

        .game-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
        }
    </style>
</head>
<body>
<!-- Header -->
<header class="d-flex justify-content-between align-items-center px-4 py-2">
    <h1 class="m-0">My Games</h1>
    <div class="d-flex align-items-center">
        <a href="/developer-dashboard" class="btn btn-outline-light mr-2">Back to Dashboard</a>
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>
</header>

<!-- Table of Uploaded Games -->
<div class="container mt-4">
    <h2>Uploaded Games</h2>
    <% if (games.length === 0) { %>
        <div class="alert alert-warning text-center">You have not uploaded any games yet.</div>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Price ($)</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                <% games.forEach(game => { %>
                    <tr>
                        <td>
                            <img src="<%= game.Image %>" alt="Game Image" class="game-image">
                        </td>
                        <td><%= game.Title %></td>
                        <td><%= game.Category %></td>
                        <td>$<%= game.Price.toFixed(2) %></td>
                        <td><%= game.Description %></td>
                        <td><%= game.Status %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>
</body>
</html>
