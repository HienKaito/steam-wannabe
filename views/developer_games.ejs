<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Games</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <style>
        /* Retain Dark Theme Colors */
        body {
            background-color: #1b2838;
            color: white;
        }

        .header-custom {
            background: #1b2838;
            border-bottom: 1px solid #444;
        }

        .table-custom {
            background: #2a3f54;
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            background: #1b2838;
            color: white;
            border-color: #444;
        }

        .table td {
            background: #2a3f54;
            color: white;
            border-color: #444;
        }

        .game-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
        }

        .btn-outline-custom {
            color: #ccc;
            border-color: #ccc;
        }

        .btn-outline-custom:hover {
            background-color: #444;
            color: white;
        }
    </style>
</head>
<body>

<!-- Header -->
<header class="header-custom py-3">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">My Games</h1>
        <div>
            <a href="/developer-dashboard" class="btn btn-outline-custom btn-sm mr-2">Back to Dashboard</a>
            <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
        </div>
    </div>
</header>

<!-- Table of Uploaded Games -->
<div class="container mt-4">
    <h2 class="text-center mb-4">Published Games</h2>

    <% if (games.length === 0) { %>
        <div class="alert alert-warning text-center">You have not uploaded any games yet.</div>
    <% } else { %>
        <div class="table-responsive table-custom p-3">
            <table class="table table-bordered table-hover mb-0">
                <thead class="text-center">
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Price ($)</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                <% games.forEach(game => { %>
                    <tr>
                        <td class="text-center">
                            <img src="<%= game.Image %>" alt="Game Image" class="game-image">
                        </td>
                        <td class="align-middle"><%= game.Title %></td>
                        <td class="align-middle text-center"><%= game.Category %></td>
                        <td class="align-middle text-center">$<%= game.Price.toFixed(2) %></td>
                        <td class="align-middle"><%= game.Description %></td>
                        <td class="align-middle text-center"><%= game.Status %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

</body>
</html>
